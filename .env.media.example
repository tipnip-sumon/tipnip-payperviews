# Example environment variables for dynamic logo storage paths
# Add these to your .env file to customize media storage paths

# Media Storage Disk (default: public)
MEDIA_DISK=public

# Logo Storage Paths
LOGO_PATH=images/logos
ADMIN_LOGO_PATH=images/logos/admin
FAVICON_PATH=images/favicons
META_IMAGE_PATH=images/meta
MAINTENANCE_IMAGE_PATH=images/maintenance

# Image Settings
MAX_IMAGE_SIZE=2048
IMAGE_QUALITY=80
CREATE_THUMBNAILS=false
THUMBNAIL_WIDTH=150
THUMBNAIL_HEIGHT=150

# Favicon Settings
FAVICON_MAX_SIZE=1024

# URL Generation
MEDIA_BASE_URL=/storage
# CDN_URL=https://cdn.example.com
MEDIA_SECURE_URLS=true
